<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".require.ActivitySolveRequire">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="处理申请"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:gravity="center_vertical"
        style="@style/Toolbar.Mystyle">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="申请人:"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_name_require"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="申请内容:\n                 探访"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="起始时间:"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_time_start"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="起始时间:"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_time_end"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_40"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
            </LinearLayout>



            <TextView
                android:id="@+id/tv_require"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/bt_agree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginHorizontal="5dp"
            android:text="同意"/>
        <Button
            android:id="@+id/bt_couju"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginHorizontal="5dp"
            android:text="拒绝"/>
    </LinearLayout>


</LinearLayout>