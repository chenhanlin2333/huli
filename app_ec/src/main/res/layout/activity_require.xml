<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".require.ActivityRequire"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="申请"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:gravity="center_vertical"
        style="@style/Toolbar.Mystyle"
        >
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_times"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="起始时间:"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/tv_times"
                android:text="1998-6-1"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"/>


            <ImageView
                android:id="@+id/img_start_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_timee"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="结束时间:"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/tv_timee"
                android:text="1998-6-1"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"/>


            <ImageView
                android:id="@+id/img_end_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@android:color/holo_blue_light"
            android:text="申请"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


    </RelativeLayout>






</LinearLayout>